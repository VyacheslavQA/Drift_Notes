<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Основная тема приложения (темная) -->
    <style name="Theme.DriftNotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <!-- Цвета фона -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <!-- Дополнительные настройки -->
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textColorSecondary">@color/on_surface</item>
        <item name="android:windowBackground">@color/background</item>

        <!-- Стиль для кнопок по умолчанию -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!-- Кастомный стиль для кнопок в соответствии с мокапом -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/background</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">28dp</item>
    </style>

    <!-- Тема без ActionBar для приветственного экрана -->
    <style name="Theme.DriftNotes.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Цвета фона -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <!-- Дополнительные настройки -->
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textColorSecondary">@color/on_surface</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- Стиль для кнопок по умолчанию -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>
</resources>