<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fishing.FishingNoteDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ViewPager для фотографий -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerPhotos"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:color/darker_gray" />

            <!-- Индикатор страниц (точки) -->
            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/dotsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                app:dotsColor="@android:color/darker_gray"
                app:dotsCornerRadius="8dp"
                app:dotsSize="8dp"
                app:dotsSpacing="4dp"
                app:dotsWidthFactor="2.5"
                app:selectedDotColor="@color/primary" />

            <!-- Информация о рыбалке -->
            <TextView
                android:id="@+id/textViewLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="Река Иртыш, Павлодарская область" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                tools:text="15.06.2023 - 18.06.2023" />

            <!-- Контейнер для спиннера выбора дня -->
            <LinearLayout
                android:id="@+id/spinnerDayContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выбрать день:"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/spinnerDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Кнопка просмотра места на карте -->
            <Button
                android:id="@+id/buttonViewOnMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/view_on_map" />

            <!-- Тип рыбалки -->
            <TextView
                android:id="@+id/textViewFishingTypeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/fishing_type"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewFishingType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Карповая" />

            <!-- Раздел снастей -->
            <TextView
                android:id="@+id/textViewTackleLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/tackle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTackle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Спиннинг Favorite Arena 702M, катушка Daiwa Legalis LT 3000" />

            <Button
                android:id="@+id/buttonEditTackle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Редактировать"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <!-- Раздел заметок -->
            <TextView
                android:id="@+id/textViewNotesLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/notes"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Рыбалка проходила в хороших условиях, клёв был активный утром и вечером, днем поклевки были редкими." />

            <Button
                android:id="@+id/buttonEditNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Редактировать"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <!-- Раздел погоды -->
            <TextView
                android:id="@+id/textViewWeatherLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/weather"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Переменная облачность, +22°C, ветер С-З 3 м/с" />

            <!-- Раздел поклевок -->
            <TextView
                android:id="@+id/textViewBitesLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/bites"
                android:textStyle="bold" />

            <!-- График поклевок -->
            <HorizontalScrollView
                android:id="@+id/chartScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scrollbars="none">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/biteChart"
                    android:layout_width="2400dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp" />

            </HorizontalScrollView>

            <!-- Сообщение, когда нет поклевок -->
            <TextView
                android:id="@+id/textViewNoBites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/no_bites_yet"
                android:textStyle="italic"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Кнопка добавления поклевки -->
            <Button
                android:id="@+id/buttonAddBite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/add_bite" />

            <!-- Список поклевок -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewBites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                tools:itemCount="3"
                tools:listitem="@layout/item_bite_record" />

            <!-- Кнопка просмотра маркерной карты (только для карповой рыбалки) -->
            <Button
                android:id="@+id/buttonViewMarkerMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/view_marker_map"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>